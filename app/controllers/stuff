
  xit "is able to follow other users" do
    sign_up
    post_photo
    click_link "Sign out"
    sign_in
    click_link "Follow andrew@gmail.com"
    expect(page).to have_content "andrew@gmail.com"
  end



          xit 'they can receive comments' do
            sign_up
            post_photo
            fill_in "Comment", with: "Don't drown in it!"
            click_link "Submit"
            expect(page).to have_content "Don't drown in it!"
        end


