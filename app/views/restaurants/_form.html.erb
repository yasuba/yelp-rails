<% if @restaurant.errors.any? %>
  <h2><%= pluralize(@restaurant.errors.count, 'error') %></h2>
  <ul>
  <% @restaurant.errors.full_messages.each do |message| %>
  <li><%= message %></li>
  <% end %>
  </ul>
</div>
<% end %>



<%= form_for @restaurant, :html => {:multipart => true} do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :description %>
  <%= f.text_field :description %>
  <%= f.label :image %>
  <%= f.file_field :image %>
  <%= f.submit 'Submit restaurant' %>
<% end %>